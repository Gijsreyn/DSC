    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug config",
            "program": "${workspaceFolder}/config/target/debug/config",
            "args": [
                "list",
                "r*"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "(Windows) Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
        }
    ]
}
